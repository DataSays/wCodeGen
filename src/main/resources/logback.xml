<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="FILE" class="ch.qos.logback.core.FileAppender">
		<file>./logs/Server.log</file>
		<encoder>
			<pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
			<charset>UTF-8</charset><!--此处设置字符集-->
		</encoder>
	</appender>
	<appender name="FILEAUDIT" class="ch.qos.logback.core.FileAppender">
		<file>./logs/ServerAudit.log</file>
		<encoder>
			<pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
			<charset>UTF-8</charset><!--此处设置字符集-->
		</encoder>
	</appender>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{mm:ss.SSS}-%-5level[%thread]%logger{36}:%line - %msg%n</pattern>
			<charset>UTF-8</charset><!--此处设置字符集-->
		</encoder>
	</appender>
	<root level="WARN,DEBUG">
		<appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
	</root>
	<logger name="freemarker" level="WARN" />
	<logger name="com.dataagg" level="INFO" />
	<logger name="com.dataagg.psc.project" level="DEBUG">
	    <appender-ref ref="FILEAUDIT"/> 
	</logger> 
	<logger name="com.dataagg.util.CacheHelper" level="DEBUG" />
	<!-- <logger name="com.dataagg.config.CacheConfiguration" level="DEBUG" /> -->
	<logger name="org.nutz.dao.impl.sql" level="DEBUG" />

	<logger name="org.springframework" level="WARN" />
	<logger name="org.springframework.cache" level="DEBUG" />
	<logger name="org.springframework.data" level="WARN" />
	<logger name="org.springframework.data.redis" level="INFO" />
	<logger name="org.springframework.boot.context.embedded" level="INFO" />
	<logger name="org.springframework.web" level="WARN" />
</configuration>
